<?xml version="1.0" encoding="utf-8"?>
<mujoco model="simple_cart">
    

    <!-- 模型统计信息 -->
    <statistic center="0 0 0" extent="2"/>
    
    <!-- 物理世界 -->
    <worldbody>        
        <!-- 小车主体 -->
        <body name="cart" pos="0 0 5">
            
            <!-- 小车主体几何体 - 方块 -->
            <geom name="cart_body" 
                  type="box" 
                  size="0.2 0.1 0.05"
                  mass="1.0"
                  material="cart_material"
                  friction="0.8 0.1 0.1"/>
            
            <!-- 小车关节 - 水平运动自由度 -->
            <joint name="cart_joint" type="free"/>
        </body>
        
    </worldbody>
    
    <!-- 驱动器 - 控制小车水平运动 -->
    <actuator>
        <motor name="cart_motor" 
               joint="cart_joint"
               gear="10"
               ctrllimited="true"
               ctrlrange="-1 1"/>
    </actuator>
    
</mujoco>